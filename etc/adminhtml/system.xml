<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="shipping" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="uber" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[<span class="uber-brand">Uber</span> Uber Configuration]]></label>
                <fieldset_css>uber-top-section</fieldset_css>
                <field id="customer_id" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Customer ID</label>
                    <comment>Data provided by Uber</comment>
                    <validate>required-entry no-whitespace</validate>
                </field>
                <field id="client_id" translate="label" type="obscure" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Client ID</label>
                    <comment>Data provided by Uber</comment>
                    <validate>required-entry no-whitespace</validate>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="client_secret" translate="label" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Client Secret</label>
                    <comment>Data provided by Uber</comment>
                    <validate>required-entry no-whitespace</validate>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
            </group>
        </section>
        <!-- CARRIER -->
        <section id="carriers" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="uber" translate="label" type="text" sortOrder="400" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[<span class="uber-brand">Uber</span> Uber Configuration]]></label>
                <fieldset_css>uber-top-section</fieldset_css>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enabled</label>
                    <validate>required-entry</validate>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="mode" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Integration Mode</label>
                    <validate>required-entry</validate>
                    <source_model>Improntus\Uber\Model\Config\Source\Carrier\IntegrationModeOption</source_model>
                </field>
                <field id="debug" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Debug Mode</label>
                    <validate>required-entry</validate>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="source" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Warehouse</label>
                    <validate>required-entry</validate>
                    <source_model>Improntus\Uber\Model\Config\Source\Carrier\SourceOption</source_model>
                </field>
                <field id="free_shipping" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Free Shipping</label>
                    <validate>required-entry</validate>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Apply Free Shipping rules</comment>
                </field>
                <field id="verification_type" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Verification Type</label>
                    <validate>required-entry</validate>
                    <source_model>Improntus\Uber\Model\Config\Source\Carrier\VerificationOption</source_model>
                    <comment>Verification steps that must be taken before the dropoff can be completed.</comment>
                </field>
                <field id="cod" translate="label" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Cash on Delivery</label>
                    <validate>required-entry</validate>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip>
                        <![CDATA[Is necessary contact Uber to activate this feature<br>Am√©rica: sample@uber.com<br>Asia: sample@uber.com<br>Europe: sample@uber.com]]>
                    </tooltip>
                </field>
                <field id="webhooks_integration" translate="label" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Automatic Status Update</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip>Before activating this option it is necessary to configure webhooks in Uber</tooltip>
                    <comment><![CDATA[For more information see the Uber <a target='_blank' href='https://developer.uber.com/docs/deliveries/guides/webhooks'>Webhooks guide</a>]]></comment>
                </field>
                <field id="webhook_signing" translate="label" type="obscure" sortOrder="85" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Webhook Signing Key</label>
                    <depends>
                        <field id="webhooks_integration">1</field>
                    </depends>
                    <comment>Data provided by Uber</comment>
                    <validate>required-entry no-whitespace</validate>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
                <field id="preparation_time" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Window Delivery</label>
                    <validate>required-entry validate-number</validate>
                    <comment>Number of minutes it takes to create the order</comment>
                    <tooltip>Expressed in Minutes</tooltip>
                </field>
                <field id="title" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Title</label>
                    <validate>required-entry</validate>
                </field>
                <field id="description" translate="label" type="textarea" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Description</label>
                    <validate>required-entry</validate>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Sort Order</label>
                    <validate>required-entry validate-number</validate>
                </field>
                <field id="showmethod" translate="label" type="select" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Show Method if Not Applicable</label>
                    <frontend_class>shipping-skip-hide</frontend_class>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="product_width_attribute" translate="label" type="select" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Product Width Attribute</label>
                    <validate>required-entry</validate>
                    <source_model>Improntus\Uber\Model\Config\Source\Carrier\CatalogProductOption</source_model>
                </field>
                <field id="product_height_attribute" translate="label" type="select" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Product Height Attribute</label>
                    <validate>required-entry</validate>
                    <source_model>Improntus\Uber\Model\Config\Source\Carrier\CatalogProductOption</source_model>
                </field>
                <field id="product_depth_attribute" translate="label" type="select" sortOrder="160" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Product Depth Attribute</label>
                    <validate>required-entry</validate>
                    <source_model>Improntus\Uber\Model\Config\Source\Carrier\CatalogProductOption</source_model>
                </field>
                <field id="automatic_shipment" translate="label" type="select" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Automatic Shipment Generation</label>
                    <validate>required-entry</validate>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="status_allowed" translate="label" type="multiselect" sortOrder="180" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Status for automatic shipping creation</label>
                    <depends>
                        <field id="automatic_shipment">1</field>
                    </depends>
                    <source_model>Improntus\Uber\Model\Config\Source\Carrier\StatusOrderOption</source_model>
                    <comment>When order change to one of this selected status, shipment will be generated automatically</comment>
                </field>
            </group>
        </section>
    </system>
</config>
