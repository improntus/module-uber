<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <carriers>
            <uber>
                <cod>0</cod>
                <mode>0</mode>
                <debug>0</debug>
                <active>0</active>
                <source>waypoints</source>
                <title>Uber Direct</title>
                <sort_order>0</sort_order>
                <promise_time>20</promise_time>
                <free_shipping>0</free_shipping>
                <sallowspecific>0</sallowspecific>
                <show_carrier_obh>1</show_carrier_obh>
                <description>Uber Direct</description>
                <preparation_time>15</preparation_time>
                <automatic_shipment>0</automatic_shipment>
                <webhooks_integration>0</webhooks_integration>
                <model>Improntus\Uber\Model\Carrier\Uber</model>
                <verification_age_pickup>21</verification_age_pickup>
                <verification_age_dropoff>21</verification_age_dropoff>
                <product_width_attribute>uber_width</product_width_attribute>
                <product_depth_attribute>uber_depth</product_depth_attribute>
                <product_height_attribute>uber_height</product_height_attribute>
                <verification_type_pickup>signature_requirement</verification_type_pickup>
                <verification_type_dropoff>signature_requirement</verification_type_dropoff>
                <webhook_signing backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <description_obh>You will receive your purchase on the next business day.</description_obh>
            </uber>
        </carriers>
    </default>
</config>
