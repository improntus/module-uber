                </validation>
                <dataType>text</dataType>
                <label translate="true">Telephone</label>
                <dataScope>telephone</dataScope>
            </settings>
        </field>
        <field name="instructions" formElement="input" sortOrder="60">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Instructions</label>
                <dataScope>instructions</dataScope>
            </settings>
        </field>
        <field name="latitude" formElement="input" sortOrder="65">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Latitude</label>
                <dataScope>latitude</dataScope>
                <tooltip>
                    <link>https://support.google.com/maps/answer/18539</link>
                    <description translate="true"><![CDATA[To get coordinates from an address you can check <a href='https://support.google.com/maps/answer/18539'>this link</a>]]></description>
                </tooltip>
            </settings>
        </field>
        <field name="longitude" formElement="input" sortOrder="70">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Longitude</label>
                <dataScope>longitude</dataScope>
                <tooltip>
                    <link>https://support.google.com/maps/answer/18539</link>
                    <description translate="true"><![CDATA[To get coordinates from an address you can check <a href='https://support.google.com/maps/answer/18539'>this link</a>]]></description>
                </tooltip>
            </settings>
        </field>
    </fieldset>
