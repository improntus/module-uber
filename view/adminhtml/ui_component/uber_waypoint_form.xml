<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">uber_waypoint_form.waypoint_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Waypoint</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="*/*/index"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="reset">
                <class>reset</class>
                <label translate="true">Reset</label>
            </button>
            <button name="delete" class="Improntus\Uber\Block\Adminhtml\Button\Waypoint\Delete" />
            <button name="save" class="Improntus\Uber\Block\Adminhtml\Button\Save">
                <class>uber-button</class>
                <label translate="true">Save Waypoint</label>
            </button>
        </buttons>
        <namespace>uber_waypoint_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>uber_waypoint_form.waypoint_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="waypoint_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="uber/waypoint/save"/>
        </settings>
        <aclResource>Improntus_Uber::waypoint_edit</aclResource>
        <dataProvider class="Improntus\Uber\Model\Waypoint\DataProvider" name="waypoint_form_data_source">
            <settings>
                <requestFieldName>waypoint_id</requestFieldName>
                <primaryFieldName>waypoint_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">Waypoint Information</label>
        </settings>
        <field name="waypoint_id" formElement="input" sortOrder="10">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>waypoint_id</dataScope>
            </settings>
        </field>
        <field name="active" formElement="checkbox" sortOrder="15">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Active</label>
                <dataScope>active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="store_id" formElement="select" sortOrder="20">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Store</label>
                <dataScope>store_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Config\Model\Config\Source\Store"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="organization_id" formElement="select" sortOrder="25">
            <settings>
                <dataType>text</dataType>
                <dataScope>organization_id</dataScope>
                <label translate="true">Organization</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Improntus\Uber\Model\Config\Source\Organization\OrganizationOption"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="name" formElement="input" sortOrder="30">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="address" formElement="input" sortOrder="35">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Address</label>
                <dataScope>address</dataScope>
            </settings>
        </field>
        <field name="postcode" formElement="input" sortOrder="40">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Postcode</label>
                <dataScope>postcode</dataScope>
            </settings>
        </field>
        <field name="region" formElement="input" sortOrder="45">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Region</label>
                <dataScope>region</dataScope>
            </settings>
        </field>
        <field name="city" formElement="input" sortOrder="50">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">City</label>
                <dataScope>city</dataScope>
            </settings>
        </field>
        <field name="telephone" formElement="input" sortOrder="55">
